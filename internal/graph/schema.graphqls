# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos(userID: ID!): [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

# create NewUser input
input NewUser {
  name: String!
}

input Todos {
  userID: ID!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  createUser(input: NewUser!): User!
}
